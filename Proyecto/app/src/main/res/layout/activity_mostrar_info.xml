<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MostrarInfo">

    <TextView
        android:id="@+id/tv_mostrar_datos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:text="@string/datosCliente"/>

    <TextView
        android:id="@+id/tv_mostrar_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:text="Aquí nombre"/>

    <TextView
        android:id="@+id/tv_mostrar_apellidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:text="Aquí apellidos"/>

    <TextView
        android:id="@+id/tv_mostrar_numero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:text="Aquí número"/>


</LinearLayout>